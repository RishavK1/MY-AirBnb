<%layout("./layouts/boilerplate") %>


  <div class="row mt-3">
    <div class="col-8 offset-2">

      <h3>Create a new Listing</h3>
      <form method="post" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
        <div class="mb-3">
          <lable for="title" class="form-label">Title</lable>
          <input name="listing[title]" placeholder="Add a title" type="text" class="form-control" required/>
          <div class="valid-feedback">Title looks good !</div>
        </div>
        <div class="mb-3">
          <lable for="description" class="form-label">
            Description
          </lable>
          <textarea name="listing[description]" class="form-control" required></textarea>
          <div class="invalid-feedback">Please enter a description !</div>

        </div>
        
        <div class="mb-3">
          <lable for="image" class="form-label">
             Upload Listing Image 
          </lable>
          <input name="listing[image]"  type="file" class="form-control" required/>
        </div>
        <div class="row">
          <div class="mb-3 col-md-4">
            <lable for="price" class="form-label">
              Price
            </lable>
            <input name="listing[price]" placeholder="500" class="form-control" type="number" required />
            <div class="invalid-feedback">Please enter a valid price !</div>

          </div>
          <div class="mb-3 col-md-8">
            <lable for="country" class="form-label">
              Country
            </lable>
            <input name="listing[country]" placeholder="India" type="text" class="form-control" required/>
            <div class="invalid-feedback">Please enter a country name !</div>

          </div>
        </div>

        <div class="mb-3">
          <lable for="location" class="form-label">
            Location
          </lable>
          <input name="listing[location]" placeholder="Haryana , Karnal" type="text" class="form-control" required />
          <div class="invalid-feedback">Please enter a location !</div>

        </div>

        <br>
        <button class="btn btn-dark add-itm mb-4">Add</button>
     </form>
    </div>
  </div>